#!/usr/bin/env python3
from fw.apps import Pipeline
        

pipeline = Pipeline()

#
#          ------                               ------
#         | src1 |                             | src2 |
#          ------                               ------
#         /       \---------------                |
#     H1 /         \ L1           \ L1            | V1
#   ----------    -----------    ----------      /
#  | H1trans1 |  | L1trans1  |  | L1trans2 |    /
#   ----------    -----------    ----------    /
#          |      |                     |     /
#       H1  \    / L1                 L1 \   / 
#           ------                        ------
#          | snk1 |                      | snk2 |
#           ------                        ------
#


pipeline.FakeSrc(
           name = "src1",
           channels = ("H1","L1"),
         ).FakeTransform(
           name = "H1trans1", src_pad_name = "src1:H1:src"
         ).FakeSink(
           name = "snk1",
           channels = ("H1","L1"),
           sink_pad_name = "snk1:H1:sink"
         )

pipeline.FakeTransform(
           name = "L1trans1",
           src_pad_name = "src1:L1:src",
         ).link(
           src_pad_name = "L1trans1:src",
           sink_pad_name = "snk1:L1:sink"
         )

pipeline.FakeTransform(
           name = "L1trans2",
           src_pad_name = "src1:L1:src",
           head = "src1"
         ).FakeSink(
           name = "snk2",
           channels = ("L1","V1"),
           sink_pad_name = "snk2:L1:sink"
         )

pipeline.FakeSrc(
           name = "src2",
           channels = ("V1",)
         ).link(
           src_pad_name = "src2:V1:src",
           sink_pad_name = "snk2:V1:sink"
         )

pipeline.run()
